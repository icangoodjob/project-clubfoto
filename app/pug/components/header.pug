header.header#header
	div.container
		.header__body
			.header__top.top-header
				.top-header__left
					a(href="/").top-header__logo
						picture
							source(srcset="images/logo_pc.svg" media="(min-width: 1200px)")
							source(srcset="images/logo_mobile.svg" media="(min-width: 300px)")
							img(src="images/logo_pc.svg" alt="логотип")
					nav.top-header__menu.header-menu(data-da=".menu-mobile__body, 991.98, 1")
						ul.header-menu__list
							each item, i in menu
								li.header-menu__item(class={active: i === 1})
									a(href=item.link).header-menu__link= item.title
				.top-header__right
					nav.header__nav.nav-header(data-da=".menu-mobile__body, 389.98, 0")
						ul.nav-header__list 
							each item in nav
								li.nav-header__item
									a(href="#").nav-header__link(class=`${item.title == 'Вход' ? 'nav-header__link--signin' : ''}`)
										.nav-header__icon 
											img(src=`images/icons/menu/${item.icon}.svg`, alt=item.title)
											if item.title == 'Вход'
												span.nav-header__count 23
										.nav-header__text= item.title
							li.nav-header__item.nav-header__item--bell
								a(href="#").nav-header__link.nav-header__link--bell
									.nav-header__icon 
										img(src=`images/icons/menu/bell.svg`, alt="уведомление")
										.nav-header__circle
								include ./notification
					button.nav-header__button(type="button")
						span
						span
						span
			.header__search 
				form(action="#").search-form.form
					input(type="text" placeholder="Поиск Club.FOTO.RU").form__input.search-form__input
					button(type="submit").search-form__button
			.header__categories.categories-header(data-da=".menu-mobile__body, 767.98, 2")
				button(type="button").categories-header__button Категории
				nav.categories-header__menu.menu-categories
					ul.menu-categories__list 
						each item in categories
							li.menu-categories__item(class={active: item.title === pageTitle})
								a(href=item.link).menu-categories__link
									span.menu-categories__icon.icon-wrap
										img(src=`images/icons/${item.icon}.svg`, alt=item.title)
									span.menu-categories__caption= item.title
			.menu-mobile
				.menu-mobile__body 
