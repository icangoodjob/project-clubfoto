+popup("popup-booked-hall")
	.popup__steps 
		.popup__step.step-popup
			.step-popup__heading 
				.step-popup__title Для чего бронируете?
			.step-popup__radiobuttons 
				each item, index in bookedPage.radiobuttons
					+bookedRadio(item, index, "booked-radio-step-2")
		include ../blocks/popupStepHall
	.popup__bottom
		.popup-actions
			button(type="button").btn.btn-blue Далее 
+popup("popup-booked-calendar", "open-popup")
	.popup__steps 
		.popup__step.step-popup
			.step-popup__heading 
				.step-popup__title Для чего бронируете?
			.step-popup__radiobuttons 
				each item, index in bookedPage.radiobuttons
					+bookedRadio(item, index, "booked-radio-step-3")
		.popup__step.step-popup
			.step-popup__heading 
				.step-popup__title Выберите зал
			.step-popup__halls
				each hall, hallIndex in bookedPage.halls
					+bookedHall(hall, hallIndex, "booked-hall-step-3")
		include ../blocks/popupStepCalendar
	.popup__bottom 
		.popup__bottom-price.mobile-price
			| #[strong 10 000 ₽] 
			span включая скидку&nbsp;0 руб.
		.popup__bottom-quantity
			.popup__bottom-info Всего #[br] #[strong 1 заказ]
			.popup__bottom-info За один раз #[br] не больше 5-ти заказов
		.popup-actions
			.popup__bottom-price 
				| #[strong 10 000 ₽] 
				span включая скидку&nbsp;0 руб.
			+btnReserve
